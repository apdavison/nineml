<?xml version='1.0' encoding='UTF-8'?>
<nineml xmlns="http://nineml.org/9ML/0.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://nineml.org/9ML/0.1 NineML_v0.1.xsd" name="Nested 9ML example model">
        
  <node name="Inhibitory post-synaptic response">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/postsynapticresponses/exp_g.xml</url>
    </definition>
    <properties>
      <decayTimeConstant>
        <value>5.0</value>
        <unit>ms</unit>
      </decayTimeConstant>
      <reversalPotential>
        <value>-70.0</value>
        <unit>mV</unit>
      </reversalPotential>
    </properties>
  </node>
  <node name="local random connections">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/connectionrules/fixed_probability.xml</url>
    </definition>
    <properties>
      <p_connect>
        <value>0.1</value>
        <unit>dimensionless</unit>
      </p_connect>
    </properties>
  </node>
  <node name="Inhibitory neuron type">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/neurons/IaF_tau.xml</url>
    </definition>
    <properties>
      <membraneCapacitance>
        <value>1.0</value>
        <unit>nF</unit>
      </membraneCapacitance>
      <membraneTimeConstant>
        <value>20.0</value>
        <unit>ms</unit>
      </membraneTimeConstant>
      <refractoryTime>
        <value>5.0</value>
        <unit>ms</unit>
      </refractoryTime>
      <threshold>
        <value>-50.0</value>
        <unit>mV</unit>
      </threshold>
      <restingPotential>
        <value>-65.0</value>
        <unit>mV</unit>
      </restingPotential>
      <resetPotential>
        <value>-70.0</value>
        <unit>mV</unit>
      </resetPotential>
    </properties>
  </node>
  <node name="lateral random connections">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/connectionrules/fixed_probability.xml</url>
    </definition>
    <properties>
      <p_connect>
        <value>0.05</value>
        <unit>dimensionless</unit>
      </p_connect>
    </properties>
  </node>
  <node name="Static inhibitory connections">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/connectiontypes/static_connection.xml</url>
    </definition>
    <properties>
      <delay>
        <value>0.3</value>
        <unit>ms</unit>
      </delay>
      <weight>
        <value>0.2</value>
        <unit>nS</unit>
      </weight>
    </properties>
  </node>
  <node name="Excitatory neuron type">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/neurons/IaF_tau.xml</url>
    </definition>
    <properties>
      <membraneCapacitance>
        <value>1.0</value>
        <unit>nF</unit>
      </membraneCapacitance>
      <membraneTimeConstant>
        <value>20.0</value>
        <unit>ms</unit>
      </membraneTimeConstant>
      <refractoryTime>
        <value>5.0</value>
        <unit>ms</unit>
      </refractoryTime>
      <threshold>
        <value>-50.0</value>
        <unit>mV</unit>
      </threshold>
      <restingPotential>
        <value>-65.0</value>
        <unit>mV</unit>
      </restingPotential>
      <resetPotential>
        <value>-70.0</value>
        <unit>mV</unit>
      </resetPotential>
    </properties>
  </node>
  <node name="Excitatory post-synaptic response">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/postsynapticresponses/exp_g.xml</url>
    </definition>
    <properties>
      <decayTimeConstant>
        <value>5.0</value>
        <unit>ms</unit>
      </decayTimeConstant>
      <reversalPotential>
        <value>0.0</value>
        <unit>mV</unit>
      </reversalPotential>
    </properties>
  </node>
  <node name="column grid with 100 micron spacing">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/networkstructures/2Dgrid.xml</url>
    </definition>
    <properties>
      <fillOrder>
        <value>sequential</value>
      </fillOrder>
      <aspectRatioXY>
        <value>1.0</value>
        <unit>dimensionless</unit>
      </aspectRatioXY>
      <dx>
        <value>100.0</value>
        <unit>µm</unit>
      </dx>
      <dy>
        <value>100.0</value>
        <unit>µm</unit>
      </dy>
      <y0>
        <value>0.0</value>
        <unit>µm</unit>
      </y0>
      <x0>
        <value>0.0</value>
        <unit>µm</unit>
      </x0>
    </properties>
  </node>
  <node name="Static excitatory connections">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/connectiontypes/static_connection.xml</url>
    </definition>
    <properties>
      <delay>
        <value>0.3</value>
        <unit>ms</unit>
      </delay>
      <weight>
        <value>0.1</value>
        <unit>nS</unit>
      </weight>
    </properties>
  </node>
  <node name="neuronal grid with 1 micron spacing">
    <definition>
      <url>http://svn.incf.org/svn/nineml/catalog/networkstructures/2Dgrid.xml</url>
    </definition>
    <properties>
      <fillOrder>
        <value>sequential</value>
      </fillOrder>
      <aspectRatioXY>
        <value>1.0</value>
        <unit>dimensionless</unit>
      </aspectRatioXY>
      <dx>
        <value>1.0</value>
        <unit>µm</unit>
      </dx>
      <dy>
        <value>1.0</value>
        <unit>µm</unit>
      </dy>
      <y0>
        <value>0.0</value>
        <unit>µm</unit>
      </y0>
      <x0>
        <value>0.0</value>
        <unit>µm</unit>
      </x0>
    </properties>
  </node>
  <group name="Column">
    <population name="Inhibitory cells">
      <number>25</number>
      <prototype>Inhibitory neuron type</prototype>
      <positions>
        <structure>neuronal grid with 1 micron spacing</structure>
      </positions>
    </population>
    <population name="Excitatory cells">
      <number>100</number>
      <prototype>Excitatory neuron type</prototype>
      <positions>
        <structure>neuronal grid with 1 micron spacing</structure>
      </positions>
    </population>
    <projection name="Intra-column inhibitory connections">
      <source>Inhibitory cells</source>
      <target>Column</target>
      <rule>local random connections</rule>
      <response>Inhibitory post-synaptic response</response>
      <synapse>Static inhibitory connections</synapse>
    </projection>
    <projection name="Intra-column excitatory connections">
      <source>Excitatory cells</source>
      <target>Column</target>
      <rule>local random connections</rule>
      <response>Excitatory post-synaptic response</response>
      <synapse>Static excitatory connections</synapse>
    </projection>
  </group>
  <group name="Network">
    <population name="Columns">
      <number>9</number>
      <prototype>Column</prototype>
      <positions>
        <structure>column grid with 100 micron spacing</structure>
      </positions>
    </population>
    <projection name="Inter-column excitatory connections">
      <source>Columns</source>
      <target>Columns</target>
      <rule>lateral random connections</rule>
      <response>Excitatory post-synaptic response</response>
      <synapse>Static excitatory connections</synapse>
    </projection>
  </group>
</nineml>
